<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">

    <com.znz.gametool.ViewGroup.GameButton
        android:id="@+id/life_map"
        android:text="地图资源"
        android:layout_marginTop="20dp"
        android:layout_weight="2"
        android:background="@drawable/bowen"
        android:drawableLeft="@drawable/map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

         <com.znz.gametool.ViewGroup.GameButton
          android:id="@+id/yingdi"
          android:text="营地内容"
          android:layout_weight="2"
          android:drawableLeft="@drawable/yingdi"
          android:layout_marginTop="20dp"
          android:background="@drawable/bowen"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

        <com.znz.gametool.ViewGroup.GameButton
            android:id="@+id/fbjs"
            android:text="副本内容"
            android:drawableLeft="@drawable/shuom"
            android:layout_weight="2"
            android:layout_marginTop="20dp"
            android:background="@drawable/bowen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.znz.gametool.ViewGroup.GameButton
            android:id="@+id/scgl"
            android:text="生存攻略"
            android:layout_weight="2"
            android:drawableLeft="@drawable/glue"
            android:layout_marginTop="20dp"
            android:background="@drawable/bowen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.znz.gametool.ViewGroup.GameButton
            android:id="@+id/about"
            android:text="关于软件"
            android:drawableLeft="@drawable/ame"
            android:layout_weight="2.5"
            android:layout_marginTop="20dp"
            android:background="@drawable/bowen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>
</LinearLayout>